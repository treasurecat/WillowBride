<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>Listing Designers</h1>

  <%= link_to 'New Designer', new_designer_path, class: 'btn btn-default' %>
  <br>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Main image</th>
        <th>Location1</th>
        <th>Location2</th>
        <th>Location3</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @designers.each do |designer| %>
        <tr>
          <td><%= designer.name %></td>
          <td><%= designer.description %></td>
          <td>  <%= image_tag(designer.main_image.url(:thumb), :class => "img-thumbnail") %></td>
          <td><%= designer.location1 %></td>
          <td><%= designer.location2 %></td>
          <td><%= designer.location3 %></td>
          <td><%= link_to 'Show', designer %></td>
          <td><%= link_to 'Edit', edit_designer_path(designer) %></td>
          <td><%= link_to 'Delete', designer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


</div>