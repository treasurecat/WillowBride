<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>Listing Collections</h1>

  <%= link_to 'New Collection', new_collection_path, class: 'btn btn-default' %>
  <br>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th>Collection</th>
        <th>Designer</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @collections.each do |collection| %>
        <tr>
          <td><%= collection.collection %></td>
          <td><%= Designer.find_by_id(collection.designer_id).name  %></td>
          <td><%= link_to 'Show', collection %></td>
          <td><%= link_to 'Edit', edit_collection_path(collection) %></td>
          <td><%= link_to 'Delete', collection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>


</div>