<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>Listing Dresses</h1>

  <%= link_to 'New Dress', new_dress_path, class: 'btn btn-default' %>

  <br>
  <br>
  <table class="table">
    <thead>
      <tr>
        <th>Designer</th>
        <th>Location</th>
        <th>Main image</th>
        <th>Price</th>
        <th>Style</th>
        <th>Garment type</th>
        <th>Tag</th>
        <th>Name</th>
        <th>Collection</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @dresses.each do |dress| %>
        <tr>
          <td><%= Designer.find_by_id(dress.designer_id).name  %></td>
          <td><%= dress.location %></td>
          <td><%= image_tag(dress.main_image.url(:thumb), :class => "img-thumbnail") %></td>
          <td><%= dress.price %></td>
          <td><%= dress.style %></td>
          <td><%= dress.garment_type %></td>
          <td><%= dress.tag %></td>
          <td><%= dress.name %></td>
          <td><%= dress.collection %></td>
          <td><%= link_to 'Show', dress %></td>
          <td><%= link_to 'Edit', edit_dress_path(dress) %></td>
          <td><%= link_to 'Delete', dress, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>



</div>