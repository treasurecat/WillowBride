<%# provide(:title, 'Contact - ' + @store.name) %>

<div class="container">
  
  <%= render partial: "nav" %>

  <div class="row">
    <div class="col-xs-12 contact-form">
      <div id="flash">
        <%if notice.present? %>
          <%= render partial: "shared/notice_banner" %>
        <% end %>
      </div>
      <%= bootstrap_form_for Contact.new, layout: :horizontal, label_col: "col-xs-3", control_col: "col-xs-9" do |f| %>
        <%= f.text_field :name, :required => true, label_class: "label" %>
        <%= f.text_field :sender, :required => true, label_class: "label", label: "email" %>
        <%= f.text_area :message, :as => :text, :required => true, label_class: "label" %>
        <div class= "hidden">
          <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
          <%= f.text_field :recipient, :value => 'tammy@willowbride.com' %>

        </div>
        <div class="col-xs-9 pull-right submit-holder">
          <%= f.submit "SEND", :class => 'btn submit' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render partial: "footer" %>
